<%= form_with(model: fine) do |form| %>
  <% if fine.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(fine.errors.count, "error") %> prohibited this fine from being saved:</h2>

      <ul>
        <% fine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :member_id, style: "display: block" %>
    <%= form.select :member_id, @members.collect { |m| [m.full_name, m.id] }, {}, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :fee_type_id, style: "display: block" %>
    <%= form.select :fee_type_id, @fee_types.collect { |f| ["#{f.name} - #{f.amount}", f.id] }, {}, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
