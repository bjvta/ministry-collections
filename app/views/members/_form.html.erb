      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :birthday, style: "display: block" %>
    <%= form.date_field :birthday, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :active, style: "display: block" %>
    <%= form.check_box :active %>
  </div>

  <div class="form-group">
    <%= form.label :enabled_to_pay, style: "display: block" %>
    <%= form.check_box :enabled_to_pay %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>
