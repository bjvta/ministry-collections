<br>

<strong>Last name:</strong>
<%= @member.last_name %>

<br>
<strong>Birthday:</strong>
<%= @member.birthday %>
<br>
<strong>Active:</strong>
<%= @member.active %>
<br>
<strong>enabled_to_pay:</strong>
<%= @member.enabled_to_pay %>
<hr>
<h2>Recogida semanal</h2>
<table class="table table-striped table-hover">
  <thead>
    <th>Fecha</th>
    <th>Monto</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
    <% @member_weekly_collections.each do |week_collection| %>
      <tr data-id="<%= week_collection.id %>">
        <td><%= week_collection.week_date %></td>
        <td><%= week_collection.amount %></td>
        <td><%= week_collection.status %></td>
        <td> <button class="btn btn-success">Pagar</button> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<h2>Multas</h2>
<hr>



<div>
  <%= link_to "Edit this member", edit_member_path(@member) %> |
  <%= link_to "Back to members", members_path %>

  <%= button_to "Destroy this member", @member, method: :delete %>
</div>

<script type="text/javascript">
  document.querySelector('.btn.btn-success').addEventListener('click', function() {
      const memberWeeklyCollectionId = document.querySelector('.btn.btn-success').parentNode.parentNode.dataset.id;

      fetch('/pay_member_weekly_collection', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': '<%= form_authenticity_token.to_s %>'
        },
        body: JSON.stringify({ member_weekly_collection_id: memberWeeklyCollectionId })
      })
        .then(response => response.json())
        .then(data => {
          if(data.status === "success"){
            this.remove()
          }else{
            alert(data.message)
          }
        })
        .catch(error => {
          console.log(error)
        });
    });    
</script>